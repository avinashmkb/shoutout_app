<h1>Listing offers</h1>

<table>
  <tr>
    <th>Message</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Created by</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @offers.each do |offer| %>
  <tr>
    <td><%= offer.message %></td>
    <td><%= offer.start_date %></td>
    <td><%= offer.end_date %></td>
    <td><%= offer.created_by %></td>
    <td><%= link_to 'Show', offer %></td>
    <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
    <td><%= link_to 'Destroy', offer, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

